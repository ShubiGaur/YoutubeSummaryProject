{
    "manifest_version": 3,
    "name": "YouTube Transcript & Summary",
    "version": "1.0",
    "description": "Fetch YouTube transcripts and generate summaries using AI",
    "permissions": [
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": [
      "https://www.googleapis.com/*"
    ]
  }
  